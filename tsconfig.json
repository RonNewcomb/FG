{
    "compilerOptions": {
        "target": "es2020",
        "moduleResolution": "Node",
        "allowJs": false,
        "skipLibCheck": false,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": false,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "outDir": "garbage", // not needed with webpack's ts-loader, but i don't want zillions of .js files in /src/
        "lib": [
            "dom",
            "dom.iterable",
            "es2020"
        ]
    },
    "include": [
        "src/**/*"
    ]
}